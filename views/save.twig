{% extends 'home.twig' %}

    {% block content %}
    <h3 class="display-6">Add peak flow reading</h3>
    {% if method == 'GET' %}
    <div class="alert alert-primary" role="alert">
    Date, time and weather conditions will be automatically added to your entry.
    </div>      
    <form method="post" action="{{ path_for('save') }}">
      <div class="form-group">
        <label for="hours">Value (L/min)</label>
        <input type="text" class="form-control" id="value" name="value">
      </div>
      <div class="form-group">
        <label for="comment">Note</label>
        <input type="text" class="form-control" id="note" name="note">
      </div>
      <div class="form-group">
        <button type="submit" name="submit" class="btn btn-success">Save</button>
      </div>
    </form>  
    {% else %}      
    <div class="alert alert-success" role="alert">
      <strong>Success!</strong> The reading was successfully created or updated.
    </div>
    {% endif %}
    {% endblock %}